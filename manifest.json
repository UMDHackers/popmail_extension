{
  "manifest_version": 2,

  "name": "Working Title",
  "description": "A fast an easy way to send emails without going to your email",
  "version": "1.0",

  "browser_action": {
    "default_icon": "mail.png",
    "default_popup": "popup.html",
    "default_title": "Compose Mail"
  },

  "permissions": [
    "activeTab",
    "identity",
    "identity.email"
  ]
}
